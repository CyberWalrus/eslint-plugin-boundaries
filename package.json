{
  "name": "eslint-plugin-boundaries",
  "version": "5.0.0-beta.0",
  "description": "Eslint plugin checking architecture boundaries between elements",
  "keywords": [
    "eslint",
    "plugin",
    "architecture",
    "boundaries",
    "dependencies",
    "elements",
    "hierarchy",
    "import"
  ],
  "author": "Javier Brea",
  "license": "MIT",
  "repository": "https://github.com/javierbrea/eslint-plugin-boundaries",
  "files": [
    "src",
    "resolver-legacy-alias"
  ],
  "main": "index.js",
  "scripts": {
    "eslint": "eslint",
    "lint": "eslint src *.js test",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test:unit": "cross-env ESLINT_USE_FLAT_CONFIG=true ESLINT_PLUGIN_BOUNDARIES_DEBUG=1 npm run test",
    "prepare": "is-ci || husky install"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-module-utils": "2.8.1",
    "micromatch": "4.0.5"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "8.0.0-alpha.30",
    "@typescript-eslint/eslint-plugin": "8.0.0-alpha.30",
    "cross-env": "7.0.3",
    "eslint": "9.5.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-local-rules": "2.0.1",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "9.0.11",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5"
  },
  "lint-staged": {
    "test/**/*.js": "eslint",
    "src/**/*.js": "eslint",
    "*.js": "eslint"
  },
  "engines": {
    "node": ">=18.18"
  }
}
